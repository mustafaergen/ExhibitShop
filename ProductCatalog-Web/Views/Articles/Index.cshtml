@using ProductCatolog_Core.Enums
@model IEnumerable<ProductCatolog_Core.Models.Article>

@{
    ViewData["Title"] = "Blogs";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Our Latest Blogs</h1>

    <div class="row mt-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm" style="width: 100%; display: flex; flex-direction: row;">
                    <div class="card-body" style="flex: 1;">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted">Published on: @item.CreatedDate.ToShortDateString()</p>
                        <a asp-action="Details" asp-controller="Articles" asp-route-id="@item.Id" class="btn btn-primary">Read More</a>
                    </div>
                    <div>
                        <img src="~/img/@item.ImageUrl1" alt="Product Image" class="img-thumbnail" style="width: 200px; height: 200px;" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .container {
            margin-top: 50px;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            background-color: #f8f9fa;
            padding: 20px;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
}
