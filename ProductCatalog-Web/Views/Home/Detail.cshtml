@model ProductCatolog_Core.Models.Product

@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4">@Model.Name</h1>
            <p class="text-muted">
                <strong>Published on:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy")
            </p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6 text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="~/img/@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="width: 400px; height: 400px;" />
            }
            else
            {
                <p class="text-muted">No Image Available</p>
            }
        </div>
        <div class="col-md-6">
            <h3 class="text-success">Product Details</h3>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Price:</strong> ₺@Model.Price</li>
                <li class="list-group-item"><strong>Category:</strong> @Model.Category.Name</li>
                <form method="post" action="@Url.Action("AddToCart", "Cart")">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn btn-success">Add To Cart</button>
                </form>
            </ul>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <h3 class="text-primary">Summary</h3>
            <p class="lead">@Html.Raw(Model.Summary)</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="@Url.Action("Index", "Products")" class="btn btn-secondary btn-lg ml-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .container {
            max-width: 900px;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }

        h3 {
            font-size: 1.8rem;
            font-weight: 500;
            margin-top: 20px;
            margin-bottom: 15px;
        }

        p {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #444;
            margin-bottom: 20px;
        }

        .btn-lg {
            padding: 12px 24px;
            font-size: 1.2rem;
            border-radius: 8px;
        }

        img {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
}
