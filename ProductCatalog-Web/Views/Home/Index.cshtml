@using System.Globalization
@model IEnumerable<ProductCatolog_Core.Models.Product>

@{
    ViewData["Title"] = "Product Catalog";
}

<style>
    body {
        margin: 0;
        overflow-y: scroll;
        scroll-snap-type: y mandatory;
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    .catalog-container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    .product-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        margin-bottom: 30px;
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    .product-images {
        flex: 1;
        overflow: hidden;
        position: relative;
    }

        .product-images img {
            width: 100%;
            height: auto;
            object-fit: contain;
            background-color: white;
            display: block;
        }

    .product-info {
        flex: 1;
        padding: 20px;
    }

        .product-info h2 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .product-info p {
            font-size: 16px;
            margin-bottom: 5px;
            color: #555;
        }

        .product-info .price {
            font-size: 22px;
            color: #ff9f00;
            font-weight: bold;
            margin-top: 10px;
        }

    .btn-custom {
        display: inline-block;
        background-color: #ff9f00;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        transition: 0.3s;
        margin-top: 15px;
    }

        .btn-custom:hover {
            background-color: #cc7a00;
        }
</style>

<div class="catalog-container">
    @foreach (var item in Model)
    {
        <div class="product-card">
            <div class="product-images">
                <img src="@Url.Content("~/img/" + item.ImageUrl)" alt="@item.Name" />
            </div>
            <div class="product-info">
                <h2>@item.Name</h2>
                <p>@item.Summary</p>
                <div class="price">@item.Price.ToString("C", new CultureInfo("en-US"))</div>
                <a asp-action="GetById" asp-controller="Product" asp-route-id="@item.Id" class="btn-custom">
                    Show Details
                </a>
            </div>
        </div>
    }
</div>
