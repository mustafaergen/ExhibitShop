@model ProductCatolog_Core.Models.Questions

@{
    ViewData["Title"] = "Ask Question";
}

<h1>Create a Question</h1>

<h4>Ask your Question</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Question" class="form-label">Your Question</label>
                <textarea asp-for="Question" class="form-control" rows="3" placeholder="Type your question here..."></textarea>
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="QuestionTypeId" class="form-label">Question Type</label>
                <select asp-for="QuestionTypeId" class="form-select">
                    <option value="">Select Question Type</option>
                    @foreach (var type in ViewBag.QuestionTypes)
                    {
                        <option value="@type.Value">@type.Text</option>
                    }
                </select>
                <span asp-validation-for="QuestionTypeId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Answer</label>
                <input type="text" class="form-control" value="Waiting for a response from customer representative" disabled />
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-send"></i> Submit Question
            </button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
