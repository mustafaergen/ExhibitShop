@using System.Globalization
@model ProductCatolog_Core.Models.Product

@{
    ViewData["Title"] = "Detail";
}
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
</head>
<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary">@Model.Name</h1>
            <p class="text-muted">
                <strong>Published on:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy")
            </p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="~/img/@Model.ImageUrl" alt="Product Image" class="img-fluid shadow-lg rounded" />
            }
            else
            {
                <p class="text-muted">No Image Available</p>
            }
        </div>
        <div class="col-md-6">
            <h3 class="text-success">Product Details</h3>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><strong>Price:</strong></span>
                    <span class="text-success">@Model.Price.ToString("C", new CultureInfo("en-US"))</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><strong>Category:</strong></span>
                    <span>@Model.Category.Name</span>
                </li>
                <form method="post" asp-action="AddToCart" asp-controller="Cart">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn btn-success btn-lg mt-3 d-flex align-items-center justify-content-center">
                        <i class="fas fa-cart-plus mr-2"></i> Add To Cart
                    </button>
                </form>
            </ul>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <h3 class="text-primary">Summary</h3>
            <p class="lead">@Html.Raw(Model.Summary)</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-lg ml-2">
                <i class="fas fa-arrow-left"></i> Back to Catalog
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .container {
            max-width: 950px;
        }

        h1 {
            font-size: 3rem;
            font-weight: bold;
            color: #007bff;
            letter-spacing: 1px;
        }

        h3 {
            font-size: 1.8rem;
            font-weight: 500;
            margin-top: 20px;
            margin-bottom: 15px;
        }

        p {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #555;
            margin-bottom: 20px;
        }

        .btn-lg {
            padding: 15px 30px;
            font-size: 1.2rem;
            border-radius: 12px;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            transition: all 0.3s ease;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

        img {
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            max-width: 100%;
            height: auto;
        }

        .list-group-item {
            font-size: 1.1rem;
            padding: 12px 15px;
        }

            .list-group-item span {
                font-weight: 600;
            }

            .list-group-item .text-success {
                color: #28a745 !important;
            }

            .list-group-item .fas {
                margin-right: 10px;
            }
    </style>
}
