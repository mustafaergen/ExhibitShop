<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Customer Relations</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/CustomerRelations/layout.css" asp-append-version="true">
</head>

<body>
    <div class="wrapper">
        <div class="sidebar">
            <div class="sidebar-header">
                <h4 class="text-center"><i class="fa-solid fa-user-tie"></i> Customer Relations</h4>
            </div>
            <a asp-area="CustomerRelations" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-chart-line"></i> <span>Dashboard</span>
            </a>
            <a asp-area="CustomerRelations" asp-controller="Customers" asp-action="Index">
                <i class="fa-solid fa-user-plus"></i> <span>Customers</span>
            </a>
            <a asp-area="CustomerRelations" asp-controller="Tickets" asp-action="Index">
                <i class="fa-solid fa-comments"></i> <span>Support Tickets</span>
            </a>
            <a asp-area="CustomerRelations" asp-controller="Questions" asp-action="Index">
                <i class="fa-solid fa-book"></i> <span>FAQ</span>
            </a>
            <a asp-area="CustomerRelations" asp-controller="QuestionType" asp-action="Index">
                <i class="fa-solid fa-th-list"></i> <span>FAQ Types</span>
            </a>
            <a asp-area="CustomerRelations" asp-controller="Reports" asp-action="Index">
                <i class="fa-solid fa-chart-pie"></i> <span>Reports</span>
            </a>
            <a asp-area="" asp-controller="Account" asp-action="Logout">
                <i class="fa-solid fa-door-open"></i> <span>Logout</span>
            </a>
        </div>
        <div class="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
                <div class="container-fluid">
                    <span class="navbar-brand">Customer Relations Panel</span>
                    <div class="collapse navbar-collapse d-flex justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="fa-solid fa-bell"></i> Notifications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="MyAccount">
                                    <i class="fa-solid fa-cog"></i> Settings
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main role="main" class="container mt-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/customerRelations.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
