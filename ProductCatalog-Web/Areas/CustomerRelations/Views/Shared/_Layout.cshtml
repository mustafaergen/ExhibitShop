<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Customer Relations</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #343a40;
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
        }

            .sidebar a {
                padding: 10px 15px;
                display: block;
                color: white;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">Customer Relations</h4>
        <a asp-area="CustomerRelations" asp-controller="Dashboard" asp-action="Index">
            <i class="fas fa-home"></i> Dashboard
        </a>
        <a asp-area="CustomerRelations" asp-controller="Customers" asp-action="Index">
            <i class="fas fa-users"></i> Customers
        </a>
        <a asp-area="CustomerRelations" asp-controller="Tickets" asp-action="Index">
            <i class="fas fa-ticket-alt"></i> Support Tickets
        </a>
        <a asp-area="CustomerRelations" asp-controller="FAQ" asp-action="Index">
            <i class="fas fa-question-circle"></i> FAQ
        </a>
        <a asp-area="CustomerRelations" asp-controller="Reports" asp-action="Index">
            <i class="fas fa-chart-bar"></i> Reports
        </a>
        <a asp-area="" asp-controller="Account" asp-action="Logout">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>

    <div class="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <span class="nav-link">Welcome, Admin</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="CustomerRelations" asp-controller="Dashboard" asp-action="Settings">
                                <i class="fas fa-cog"></i> Settings
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <main role="main" class="container mt-4">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
