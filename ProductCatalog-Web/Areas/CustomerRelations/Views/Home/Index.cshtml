@{
    var orderActivities = ViewBag.OrderActivity as List<ProductCatolog_Core.Models.Activities>;
    var userActivities = ViewBag.UserActivity as List<ProductCatolog_Core.Models.Activities>;
}
<head><link rel="stylesheet" href="~/css/CustomerRelations/Home/index.css" /></head>
<div class="row g-4">
    <div class="col-md-4">
        <div class="custom-card custom-card-primary">
            <div class="card-content">
                <div class="card-icon">
                    <i class="fas fa-users fa-4x"></i>
                </div>
                <h5>Total Customers</h5>
                <h3>@ViewBag.UserCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="custom-card custom-card-warning">
            <div class="card-content">
                <div class="card-icon">
                    <i class="fas fa-question fa-4x"></i>
                </div>
                <h5>FAQs</h5>
                <h3>@ViewBag.QuestionCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="custom-card custom-card-success">
            <div class="card-content">
                <div class="card-icon">
                    <i class="fas fa-dollar-sign fa-4x"></i>
                </div>
                <h5>Total Earnings</h5>
                <h3>@ViewBag.TotalEarnings.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</h3>
            </div>
        </div>
    </div>
</div>



<div class="row mt-4">
    <div class="col-md-12">
        <div class="card shadow-sm p-3">
            <h5><i class="fas fa-history"></i> Customer Order Activities</h5>
            <ul class="list-group list-group-flush">
                @if (orderActivities != null && orderActivities.Any())
                {
                    @foreach (var activity in orderActivities)
                    {
                        <li class="list-group-item">
                            <strong>@activity.CreatedAt.ToString("dd.MM.yyyy HH:mm")</strong> - @activity.ActivityDescription
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item text-muted">No recent order activities.</li>
                }
            </ul>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card shadow-sm p-3">
            <h5><i class="fas fa-user-clock"></i> Recent User Activities</h5>
            <ul class="list-group list-group-flush">
                @if (userActivities != null && userActivities.Any())
                {
                    @foreach (var activity in userActivities)
                    {
                        <li class="list-group-item">
                            <strong>@activity.CreatedAt.ToString("dd.MM.yyyy HH:mm")</strong> - @activity.ActivityDescription
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item text-muted">No recent user activities.</li>
                }
            </ul>
        </div>
    </div>
</div>
