@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 bg-primary text-white">
                <i class="fas fa-users fa-3x"></i>
                <h5 class="mt-2">Total Customers</h5>
                <h3>1,250</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 bg-warning text-white">
                <i class="fas fa-ticket-alt fa-3x"></i>
                <h5 class="mt-2">Open Tickets</h5>
                <h3>85</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 bg-success text-white">
                <i class="fas fa-question-circle fa-3x"></i>
                <h5 class="mt-2">FAQs</h5>
                <h3>120</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 bg-danger text-white">
                <i class="fas fa-exclamation-circle fa-3x"></i>
                <h5 class="mt-2">Urgent Issues</h5>
                <h3>12</h3>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <h5 class="card-title"><i class="fas fa-chart-bar"></i> Ticket Status Overview</h5>
                <canvas id="ticketChart"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <h5 class="card-title"><i class="fas fa-chart-pie"></i> Customer Demographics</h5>
                <canvas id="customerChart"></canvas>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow-sm p-3">
                <h5><i class="fas fa-history"></i> Recent Activities</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">John Doe opened a new support ticket.</li>
                    <li class="list-group-item">Alice updated the FAQ section.</li>
                    <li class="list-group-item">Mark resolved a customer complaint.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/customerRelations.js" asp-append-version="true"></script>
}
