@using ProductCatolog_Core.Enums
@model IEnumerable<ProductCatolog_Core.Models.QuestionType>

@{
    ViewData["Title"] = "Question Type List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fa-solid fa-question-circle"></i> Question Types</h2>
        <a asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i> Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Created Date</th>
                    <th>Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                        <td>
                            @if (item.Status == Status.Active)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else if (item.Status == Status.Passive)
                            {
                                <span class="badge bg-danger">Passive</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="fa-solid fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
