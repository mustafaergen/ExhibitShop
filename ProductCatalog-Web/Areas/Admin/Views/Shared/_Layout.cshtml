<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div id="wrapper">
        <div id="sidebar" class="bg-dark">
            <div class="sidebar-header text-white text-center py-3">
                <h4><i class="fa-solid fa-cogs"></i> Admin Panel</h4>
            </div>
            <ul class="list-group">
                <li>
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-home"></i> Dashboard
                    </a>
                <li>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index">
                        <i class="fa-solid fa-list"></i> Categories
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index">
                        <i class="fa-solid fa-box"></i> Products
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Articles" asp-action="Index">
                        <i class="fa-solid fa-newspaper"></i> Articles
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Home" asp-action="GetCustomers">
                        <i class="fa-solid fa-users"></i> Users
                    </a>
                </li>
                <li>
                     <a asp-area="Admin" asp-controller="Offers" asp-action="Index">
                       <i class="fa-solid fa-dollar-sign"></i> Offers
                     </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Settings" asp-action="Index">
                        <i class="fa-solid fa-gears"></i> Settings
                    </a>
                </li>
            </ul>
        </div>

        <div id="page-content">
            <nav class="navbar navbar-expand-lg navbar-light border-bottom">
                <button id="menu-toggle" class="btn btn-outline-dark btn-sm">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="MyAccount">
                                    <i class="fa-solid fa-user"></i> My Account (@User.Identity.Name)
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <i class="fa-solid fa-sign-out-alt"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="fa-solid fa-user-plus"></i> Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fa-solid fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>

            <div class="container-fluid mt-3">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="footer bg-light text-center py-3">
        <div class="container">
            &copy; 2025 - ProductCatalog_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
