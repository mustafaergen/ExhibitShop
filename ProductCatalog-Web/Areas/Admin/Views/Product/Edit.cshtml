@model ProductCatolog_Core.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-warning text-white text-center">
                    <h3><i class="fas fa-edit"></i> Edit Product</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="fas fa-tag"></i> Product Name
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Enter product name..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Price" class="form-label fw-bold">
                                <i class="fas fa-dollar-sign"></i> Price
                            </label>
                            <input asp-for="Price" class="form-control" placeholder="Enter price..." />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Summary" class="form-label fw-bold">
                                <i class="fas fa-info-circle"></i> Summary
                            </label>
                            <textarea asp-for="Summary" class="form-control" rows="3" placeholder="Enter summary..."></textarea>
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ImageUrl" class="form-label fw-bold">
                                <i class="fas fa-image"></i> Upload New Image
                            </label>
                            <input type="file" name="file" class="form-control" />
                            <input type="hidden" asp-for="ImageUrl" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        

                        <div class="form-group mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">
                                <i class="fas fa-list"></i> Choose Category
                            </label>
                            <select class="form-select" asp-for="CategoryId" asp-items="ViewBag.Categories">
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label fw-bold">
                                <i class="fas fa-toggle-on"></i> Status
                            </label>
                            <select asp-for="Status" class="form-control">
                                <option value="Active">Active</option>
                                <option value="Passive">Passive</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/YOUR-FONT-AWESOME-KIT.js" crossorigin="anonymous"></script>
}
