@model ProductCatolog_Core.DTOs.ProductCreateDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProductCreateDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label><br />
                <img class="img-fluid m-2 border-1 shadow" width="60" height="60" src="~/images/@Model.ImageUrl" />
