@using ProductCatolog_Core.VMs
@model ManagerUserRoleVM
@{
    ViewData["Title"] = "RoleManager";
}



<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Manage Roles For User</h1>
    <hr />

    <form asp-action="RoleManager" method="post">
        <input type="hidden" asp-for="UserId" />

        <div class="my-3 text-center">
            <span class="fw-bold fs-4 text-dark">User Id: <span class="text-primary">@Model.UserId</span></span><br />
            <span class="fw-bold fs-4 text-dark">User Name: <span class="text-primary">@Model.UserName</span></span>
        </div>

        <hr />
        <table class="table table-responsive-sm table-hover table-striped">
            <thead class="thead-light">
                <tr>
                    <th>Role</th>
                    <th class="text-center">Assigned</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>@role.RoleName</td>
                        <td class="text-center">
                            <input type="checkbox" asp-for="Roles[Model.Roles.IndexOf(role)].IsSelected" />
                            <input type="hidden" asp-for="Roles[Model.Roles.IndexOf(role)].RoleName" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success btn-lg w-45">
                <i class="bi bi-save"></i> Save Changes
            </button>
            <button type="submit" asp-action="GetCustomers" class="btn btn-outline-secondary btn-lg w-45">
                <i class="bi bi-arrow-left-circle"></i> Back to Customers
            </button>
        </div>
    </form>
</div>
