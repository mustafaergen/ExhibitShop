@model IEnumerable<ProductCatolog_Core.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-primary text-white text-center">
            <h2><i class="fas fa-list"></i> Category List</h2>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between mb-3">
                <h4 class="fw-bold">Categories</h4>
                <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-circle"></i> Create New</a>
            </div>
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th><i class="fas fa-tag"></i> @Html.DisplayNameFor(model => model.Name)</th>
                        <th><i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.CreatedDate)</th>
                        <th><i class="fas fa-tag"></i> Product Count</th>
                        <th><i class="fas fa-toggle-on"></i> @Html.DisplayNameFor(model => model.Status)</th>
                        <th class="text-center"><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.CreatedDate.ToString("dd MMM yyyy")</td>
                            <td>@item.Products.Count()</td>
                            <td>
                                @if (item.Status == 0)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Passive</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/YOUR-FONT-AWESOME-KIT.js" crossorigin="anonymous"></script>
}
