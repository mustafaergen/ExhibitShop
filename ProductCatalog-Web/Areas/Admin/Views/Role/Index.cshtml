@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h1>Manage Roles</h1>

<div>
    <a asp-action="CreateRole" asp-controller="Role" class="btn btn-success">Create New Role</a>
</div>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Role Name</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td class="text-center">
                    <a asp-action="EditRole" asp-controller="Role" asp-route-id="@role.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DeleteRole" asp-controller="Role" asp-route-id="@role.Id" class="btn btn-danger btn-sm ml-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="GetCustomers" asp-controller="Home" class="btn btn-primary">Back to List</a>
</div>
