@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h1>Manage Roles</h1>

<div>
    <a href="@Url.Action("CreateRole", "Role")" class="btn btn-success">Create New Role</a>
</div>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Role Name</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td class="text-center">
                    <a href="@Url.Action("EditRole", "Role", new { id = role.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("DeleteRole", "Role", new { id = role.Id })" class="btn btn-danger btn-sm ml-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="GetCustomers">Back to List</a>
</div>
