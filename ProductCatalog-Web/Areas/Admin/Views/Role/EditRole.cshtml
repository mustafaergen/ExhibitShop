@model ProductCatolog_Core.VMs.RoleVM

@{
    ViewData["Title"] = "EditRole";
}

<head>
    <link href="~/css/Admin/Role/editRole.css" rel="stylesheet" asp-append-version="true" />
</head>

<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Role</h1>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EditRole">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-4">
                    <label asp-for="RoleName" class="control-label font-weight-bold">Role Name</label>
                    <br />
                    <input asp-for="RoleName" class="form-control p-3" placeholder="Enter the role name" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary btn-block p-3" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary p-3">Back to List</a>
    </div>
</div>
