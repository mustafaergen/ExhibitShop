@model ProductCatolog_Core.VMs.RoleVM

@{
    ViewData["Title"] = "Create Role";
}
<head>
    <link rel="stylesheet" href="~/css/Admin/Role/createRole.css" asp-append-version="true"/>
</head>

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Create New Role</h1>

    <form asp-action="CreateRole" method="post">
        <div class="form-group">
            <label for="RoleName">Role Name</label>
            <input type="text" id="RoleName" name="RoleName" class="form-control" value="@Model.RoleName" required />
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success btn-lg w-100">
                <i class="bi bi-save"></i> Save New Role
            </button>
        </div>
    </form>

    <div class="mt-4">
        <a asp-action="GetCustomers" asp-controller="Home" class="btn btn-outline-secondary btn-lg w-100">
            <i class="bi bi-arrow-left-circle"></i> Back to Customers
        </a>
    </div>
</div>
