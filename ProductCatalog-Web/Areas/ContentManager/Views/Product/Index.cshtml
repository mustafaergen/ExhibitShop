@model IEnumerable<ProductCatolog_Core.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4"><i class="fas fa-boxes"></i> Product List</h2>

    <div class="d-flex justify-content-between mb-3">
        <h4 class="fw-bold">Products</h4>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-0">
                    <img src="~/img/@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">

                    <div class="card-body">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="card-text text-muted">@item.Summary</p>
                        <p class="fw-bold text-success">Price: $@item.Price</p>

                        <div class="mb-2">
                            <strong>Category:</strong> @item.Category.Name
                        </div>

                        <div>
                            <strong>Status:</strong>
                            @if (item.Status == 0)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Passive</span>
                            }
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/YOUR-FONT-AWESOME-KIT.js" crossorigin="anonymous"></script>
}
