@model ProductCatolog_Core.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-edit"></i> Edit Product</h3>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-4 text-center">
                            <label class="form-label fw-bold text-dark">
                                <i class="fas fa-image"></i> Product Image
                            </label>
                            <div class="mb-3">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="~/img/@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-width: 250px; border-radius: 8px;">
                                }
                                else
                                {
                                    <span class="text-muted">No image uploaded</span>
                                }
                            </div>
                            <div class="input-group">
                                <input type="file" name="file" class="form-control" />
                            </div>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold text-dark">
                                <i class="fas fa-tag"></i> Product Name
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Enter product name..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Price" class="form-label fw-bold text-dark">
                                <i class="fas fa-dollar-sign"></i> Price
                            </label>
                            <input asp-for="Price" type="number" class="form-control" placeholder="Enter price..." step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Summary" class="form-label fw-bold text-dark">
                                <i class="fas fa-info-circle"></i> Summary
                            </label>
                            <textarea asp-for="Summary" class="form-control" rows="4" placeholder="Enter summary..."></textarea>
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold text-dark">
                                <i class="fas fa-list"></i> Choose Category
                            </label>
                            <select class="form-select" asp-for="CategoryId" asp-items="ViewBag.Categories">
                                <option value="">-- Select a category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label fw-bold text-dark">
                                <i class="fas fa-toggle-on"></i> Status
                            </label>
                            <select asp-for="Status" class="form-select">
                                <option value="Active">Active</option>
                                <option value="Passive">Passive</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/YOUR-FONT-AWESOME-KIT.js" crossorigin="anonymous"></script>
}
