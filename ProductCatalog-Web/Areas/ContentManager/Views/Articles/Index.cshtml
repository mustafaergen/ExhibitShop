@using ProductCatolog_Core.Enums
@model IEnumerable<ProductCatolog_Core.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-4">Article List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div id="carousel-@item.Id" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @if (!string.IsNullOrEmpty(item.ImageUrl1))
                            {
                                <div class="carousel-item active">
                                    <img src="~/img/@item.ImageUrl1" class="d-block w-100" alt="Image1">
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.ImageUrl2))
                            {
                                <div class="carousel-item">
                                    <img src="~/img/@item.ImageUrl2" class="d-block w-100" alt="Image2">
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.ImageUrl3))
                            {
                                <div class="carousel-item">
                                    <img src="~/img/@item.ImageUrl3" class="d-block w-100" alt="Image3">
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carousel-@item.Id" role="button" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-@item.Id" role="button" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-truncate">@Html.Raw(item.Introduction)</p>
                        <p class="card-text text-muted">@Html.DisplayFor(modelItem => item.CreatedDate)</p>
                        <p class="badge bg-info">@Html.DisplayFor(modelItem => item.Status)</p>
                        <div class="mt-3 d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
